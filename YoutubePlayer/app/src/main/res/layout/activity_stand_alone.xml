<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".StandAlone">

    <Button
            android:text="@string/single_video"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/btnPlayVideo"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="16dp"/>
    <Button
            android:text="@string/video_playlist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnPlaylist" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/btnPlayVideo"
            app:layout_constraintStart_toStartOf="@+id/btnPlayVideo"/>
</androidx.constraintlayout.widget.ConstraintLayout>